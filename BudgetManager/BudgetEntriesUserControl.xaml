<UserControl x:Class="BudgetManager.BudgetEntriesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BudgetManager"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="650">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="250"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dgBudget" Grid.Row="1" Margin="10 10 10 10">
            <DataGrid.Columns>

            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Add" Width="50" Margin="10 10 10 10" Click="btnAdd_Click"></Button>
            <Button Content="Edit" Width="50" Margin="10 10 10 10" Click="btnEdit_Click"></Button>
            <Button Content="Delete" Width="50" Margin="10 10 10 10" Click="btnDelete_Click"></Button>
        </StackPanel>
        <local:AddEntryUserControl x:Name="AddExpenseIncomeUserControl" Grid.Row="2"></local:AddEntryUserControl>

    </Grid>
</UserControl>
