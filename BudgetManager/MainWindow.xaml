<Window x:Class="BudgetManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetManager"
        mc:Ignorable="d"
        Title="Budget manager" Height="480" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <local:MenuUserControl x:Name="MenuUserControl" Grid.Column="0"></local:MenuUserControl>
        <local:BudgetEntriesUserControl x:Name="BudgetEntriesUserControl" Grid.Column="1"></local:BudgetEntriesUserControl>
        <local:ShowSummaryUserControl x:Name="ShowSummaryUserControl" Grid.Column="1"></local:ShowSummaryUserControl>
    </Grid>
</Window>
